<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <h1 class="text-center mb-4 display-6">Contact Details</h1>
            <% if (!contact) { %>
                <div class="alert alert-danger text-center fw-bold" role="alert">
                    Contact data not found <br>
                    <a href="/contact" class="alert-link fw-normal">&laquo; Back to Contacts</a>
                </div>
                <% } else { %>
                    <div class="card shadow-lg border-0 rounded-4"
                        style="width: 100%; max-width: 400px; margin: 0 auto;">
                        <div class="card-body p-4 text-center">
                            <img src="/path/to/default-avatar.png" alt="Avatar" class="rounded-circle mb-3"
                                style="width: 120px; height: 120px;">
                            <h5 class="card-title mb-1">
                                <strong>
                                    <%= contact.nama %>
                                </strong>
                            </h5>
                            <h6 class="card-subtitle mb-3 text-muted">
                                <%= contact.noHp %>
                            </h6>
                            <p class="card-text text-secondary mb-4">
                                <i class="fas fa-envelope"></i>
                                <%= contact.email %>
                            </p>

                            <form action="/contact?_method=DELETE" method="POST" class="d-inline">
                                <input type="hidden" name="_id" value="<%= contact._id %>">
                                <button type="submit" class="btn btn-danger btn-sm rounded-pill"
                                    onclick="return confirm('Are you sure you want to delete this contact?')">
                                    <i class="fas fa-trash-alt"></i> Delete
                                </button>
                            </form>

                            <a href="/contact" class="btn btn-outline-primary btn-sm rounded-pill mt-3 d-block">
                                &laquo; Back to Contacts
                            </a>
                        </div>
                    </div>
                    <% } %>
        </div>
    </div>
</div>